{
    "name": "@kdtjs/eslint-config",
    "type": "module",
    "version": "0.0.1",
    "description": "My personal ESLint config",
    "author": "Diep Dang <khangdt310722@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/kdtjs/eslint-config",
    "repository": "github:kdtjs/eslint-config",
    "bugs": {
        "email": "khangdt310722@gmail.com",
        "url": "https://github.com/kdtjs/eslint-config/issues"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsup && tsc --project ./tsconfig.build.json",
        "test": "echo \"Error: no test specified\"",
        "release": "np --no-yarn --no-release-draft --yolo --message='chore: release v%s'",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks && pnpm build",
        "prepublishOnly": "pnpm build"
    },
    "peerDependencies": {
        "eslint": ">=8.57.0"
    },
    "dependencies": {
        "@antfu/eslint-define-config": "^1.23.0-2",
        "@antfu/install-pkg": "^0.3.1",
        "@eslint/js": "^8.57.0",
        "@stylistic/eslint-plugin": "^1.7.0",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "@typescript-eslint/utils": "^7.3.1",
        "@unocss/eslint-plugin": "^0.58.6",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-merge-processors": "^0.1.0",
        "eslint-plugin-antfu": "^2.1.2",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-format": "^0.1.0",
        "eslint-plugin-i": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.2.1",
        "eslint-plugin-jsonc": "^2.14.1",
        "eslint-plugin-markdown": "^4.0.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-perfectionist": "^2.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "eslint-plugin-sonarjs": "^0.24.0",
        "eslint-plugin-tailwindcss": "^3.15.1",
        "eslint-plugin-unicorn": "^51.0.1",
        "eslint-plugin-unused-imports": "^3.1.0",
        "eslint-plugin-vue": "^9.23.0",
        "eslint-processor-vue-blocks": "^0.1.1",
        "globals": "^14.0.0",
        "jsonc-eslint-parser": "^2.4.0",
        "local-pkg": "^0.5.0",
        "prettier": "^3.2.5",
        "prettier-plugin-toml": "^2.0.1",
        "prompts": "^2.4.2",
        "semver": "^7.6.0",
        "vue-eslint-parser": "^9.4.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.1",
        "@commitlint/config-conventional": "^19.1.0",
        "@kdtjs/tsconfig": "^0.0.1",
        "@swc/core": "^1.4.8",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.11.30",
        "@types/prompts": "^2.4.9",
        "eslint": "^8.57.0",
        "lint-staged": "^15.2.2",
        "np": "^10.0.1",
        "npm-check-updates": "^16.14.17",
        "only-allow": "^1.2.1",
        "rimraf": "^5.0.5",
        "simple-git-hooks": "^2.11.0",
        "tsup": "^8.0.2",
        "typescript": "^5.4.2"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
