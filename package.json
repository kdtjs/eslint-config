{
    "name": "@kdtjs/eslint-config",
    "type": "module",
    "version": "0.0.1",
    "description": "My personal ESLint config",
    "author": "Diep Dang <khangdt310722@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/kdtjs/eslint-config",
    "repository": "github:kdtjs/eslint-config",
    "bugs": {
        "email": "khangdt310722@gmail.com",
        "url": "https://github.com/kdtjs/eslint-config/issues"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsup && tsc --project ./tsconfig.build.json",
        "test": "echo \"Error: no test specified\"",
        "release": "np --no-yarn --no-release-draft --yolo --message='chore: release v%s'",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks && pnpm build",
        "prepublishOnly": "pnpm build"
    },
    "peerDependencies": {
        "eslint": ">=9.24.0"
    },
    "dependencies": {
        "@antfu/eslint-define-config": "^1.23.0-2",
        "@antfu/install-pkg": "^1.0.0",
        "@eslint/js": "^9.24.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "@typescript-eslint/utils": "^8.29.1",
        "@unocss/eslint-plugin": "^66.0.0",
        "eslint-import-resolver-typescript": "^4.3.2",
        "eslint-merge-processors": "^2.0.0",
        "eslint-plugin-antfu": "^3.1.1",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-format": "^1.0.1",
        "eslint-plugin-i": "^2.29.1",
        "eslint-plugin-jsdoc": "^50.6.9",
        "eslint-plugin-jsonc": "^2.20.0",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-n": "^17.17.0",
        "eslint-plugin-perfectionist": "^4.11.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "eslint-plugin-sonarjs": "^3.0.2",
        "eslint-plugin-tailwindcss": "^3.18.0",
        "eslint-plugin-unicorn": "^58.0.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "eslint-plugin-vue": "^10.0.0",
        "eslint-processor-vue-blocks": "^2.0.0",
        "globals": "^16.0.0",
        "jsonc-eslint-parser": "^2.4.0",
        "local-pkg": "^1.1.1",
        "prettier": "^3.5.3",
        "prettier-plugin-toml": "^2.0.4",
        "prompts": "^2.4.2",
        "semver": "^7.7.1",
        "vue-eslint-parser": "^10.1.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@kdtjs/tsconfig": "^0.0.1",
        "@swc/core": "^1.11.20",
        "@types/eslint__js": "^9.14.0",
        "@types/node": "^22.14.1",
        "@types/prompts": "^2.4.9",
        "eslint": "^9.24.0",
        "lint-staged": "^15.5.1",
        "np": "^10.2.0",
        "npm-check-updates": "^17.1.18",
        "only-allow": "^1.2.1",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.12.1",
        "tsup": "^8.4.0",
        "typescript": "^5.8.3"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
